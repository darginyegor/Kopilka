<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_goal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fkn.kopilka.AddGoalActivity">

    <Button
        android:text="Добавить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="add"
        style="@style/Widget.AppCompat.Button.Colored" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/edescription"
        android:layout_above="@+id/button2"
        android:layout_below="@+id/edata"
        android:hint="Описание"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:gravity="top"
        style="@android:style/Widget.Material.EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/enumbermoney"
        android:hint="Кол-во денег"
        android:layout_below="@+id/ename"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@android:style/Widget.Material.EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/edata"
        android:hint="Дата"
        android:layout_below="@+id/enumbermoney"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@android:style/Widget.Material.EditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/ename"
        android:hint="Название"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        style="@android:style/Widget.Material.EditText" />

</RelativeLayout>
